module IPrime;

interface IPrime {
	Unit divide (Int n);
}

interface ISieve {
	Unit sieve();
}

class Sieve(Int bound) {
	Int n = 0;
	IPrime two;
	{
		two = new Prime(2);
		n = 3;
	}
	Unit run() {
		while (n < bound) {
			two!divide(n) ;
			n = n + 1;
		}
	}
}

class Prime (Int p) implements IPrime {
	IPrime next;
	Unit divide (Int n) {
		if ( (n % p) != 0) {
			if (next != null) {
				Fut f = next!divide (n);
				await f;
			}
			else {
				next = new Prime(n);
			}
		}
	}
}

